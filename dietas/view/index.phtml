function imprimirDietaSinHijas($dieta, $cols = 3)
{
    return '<tr>
    <td> ' . $dieta->getDescripcion() . '</td>
    <td colspan="' . $cols . '"></td>
    </tr>';
}

function getRowspan($dieta)
{
    $rows = count($dieta->getHijas());

    if ($rows === 0) {
        return 1;
    }

    foreach ($dieta->getHijas() as $hija) {
        if (!empty($hija->getHijas())) {
            $rows += count($hija->getHijas()) - 1;
        }
    }


    return $rows;
}

function getColspan($dieta, $max, $min)
{
    if (empty($dieta->getHijas())) {
        return $max;
    }

    return $min;
}

function imprimirNietas($dieta)
{
    $result = '<tr>';
    $result .= '<td>' . $dieta->getDescripcion() . '</td>';
    $result .= '</tr>';
}

function imiprimirHija($hija, $i)
{
    $result = '<tr>';
    $result .= '<td rowspan="' . getRowspan($hija) . '" colspan="' . getColspan($hija, 2, 1) . '">' . $hija->getDescripcion() . '</td>';
    if (count($hija->getHijas())) {
        $nieta = $hija->getHijas()[0];
        $result .= '<td>' . $nieta->getDescripcion() . '</td>';
    }
    $result .= '</tr>';


    if (count($hija->getHijas())) {
        for ($h = 1; $h < count($hija->getHijas()); $h++) {
            $result .= imiprimirHija($hija->getHijas()[$h], $h);
        }
    }

    return $result;
}

function imprimirDietaConHijas($dieta)
{
    $result = '<tr>';
    $result .= '<td class="" rowspan="' . getRowspan($dieta) . '" colspan="' . getColspan($dieta, 3, 1) . '">' . $dieta->getDescripcion() . '</td>';
    $hija = $dieta->getHijas()[0];
    $result .= '<td rowspan="' . getRowspan($hija) . '" colspan="' . getColspan($hija, 2, 1) . '">' . $hija->getDescripcion() . '</td>';
    if (count($hija->getHijas())) {
        $nieta = $hija->getHijas()[0];
        $result .= '<td>' . $nieta->getDescripcion() . '</td>';
    }
    $result .= '</tr>';
    return $result;
}
